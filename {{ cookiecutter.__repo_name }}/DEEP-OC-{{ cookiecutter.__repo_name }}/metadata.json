{
    "title": "{{ cookiecutter.__repo_name }}",
    "summary": "{{ cookiecutter.description.replace('\'', '') }}",
    "description": [
		"{{ cookiecutter.__repo_name }} is an application using the DEEPaaS API.\n",
        "Write additional information for your users (how to predict, how to retrain,",
        "dataset description, training description, etc)."
    ],
    "keywords": [
        "docker",
        "api-v2"
    ],
    "license": "{{ cookiecutter.open_source_license }}",
    "date_creation": "{% now 'utc', '%Y-%m-%d' %}",
    "sources": {
		"dockerfile_repo": "{{ cookiecutter.git_base_url }}/DEEP-OC-{{ cookiecutter.__repo_name }}",
		"docker_registry_repo": "{{ cookiecutter.dockerhub_user }}/deep-oc-{{ cookiecutter.__repo_name }}",
		"code": "{{ cookiecutter.git_base_url }}/{{ cookiecutter.__repo_name }}"
	},
    "continuous_integration": {
        "build_status_badge": "https://jenkins.indigo-datacloud.eu/buildStatus/icon?job=Pipeline-as-code/DEEP-OC-org/DEEP-OC-{{ cookiecutter.__repo_name }}/master",
        "build_status_url": "https://jenkins.indigo-datacloud.eu/job/Pipeline-as-code/job/DEEP-OC-org/job/DEEP-OC-{{ cookiecutter.__repo_name }}/job/master"
    },
    "tosca": [
        {
            "title": "Mesos (CPU)",
            "url": "https://raw.githubusercontent.com/indigo-dc/tosca-templates/master/deep-oc/deep-oc-marathon-webdav.yml",
            "inputs": [
                "rclone_conf",
                "rclone_url",
                "rclone_vendor",
                "rclone_user",
                "rclone_pass"
            ]
        }
    ]
}
